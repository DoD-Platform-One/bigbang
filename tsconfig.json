{
  "compilerOptions": {
    "allowJs": false,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": false,
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  // "exclude": ["test/**/*"],
  "compileOnSave": false,
  "ts-node": {
    "esm": true,
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  },
}
