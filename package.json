{
  "name": "RepoSync",
  "author": "Snekcode",
  "homepage": "https://repo1.dso.mil/platform-one/big-bang/apps/product-tools/repo-sync",
  "version": "1.0.0",
  "license": "ISC",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "main": "index.ts",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=lib/index.js && cp -rf src/assets lib",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "zip": "rm Repo_Sync.zip || true && ( cd lib && zip -r ../Repo_Sync.zip . )",
    "predeploy": "npm run build && npm run zip",
    "deploy": "aws lambda update-function-code --function-name Repo_Sync --zip-file fileb://Repo_Sync.zip"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "nodegit": "^0.27.0",
    "probot": "^12.2.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.110",
    "@types/jest": "^23.1.5",
    "@types/node": "^10.5.2",
    "@types/nodegit": "^0.28.1",
    "esbuild": "^0.17.10",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.4.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3",
    "ts-jest": "^23.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "typescript-eslint-parser": "^18.0.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  }
}
